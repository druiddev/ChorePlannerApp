<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_bg"
    android:orientation="vertical"
    android:padding="15dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:scrollbarSize="15dp"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/rounded_layout"
                    android:backgroundTint="@color/red_brown"
                    android:gravity="center_vertical" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-33dp"
                    android:fontFamily="cursive"
                    android:text="@string/kitchen"
                    android:textAlignment="center"
                    android:textColor="@color/dark_brown"
                    android:textSize="30sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <GridView
                android:id="@+id/chore_grid_kitchen"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:background="@drawable/rounded_layout"
                android:horizontalSpacing="1dp"
                android:numColumns="4"
                android:verticalSpacing="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_layout"
                    android:backgroundTint="@color/red_brown"
                    android:gravity="center_vertical" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-35dp"
                    android:layout_weight="1"
                    android:fontFamily="cursive"
                    android:text="@string/living_room"
                    android:textAlignment="center"
                    android:textColor="@color/dark_brown"
                    android:textSize="30sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <GridView
                android:id="@+id/chore_grid_living"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:background="@drawable/rounded_layout"
                android:horizontalSpacing="1dp"
                android:numColumns="4"
                android:verticalSpacing="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_layout"
                    android:backgroundTint="@color/red_brown"
                    android:gravity="center_vertical" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-35dp"
                    android:layout_weight="1"
                    android:fontFamily="cursive"
                    android:text="@string/half_bath"
                    android:textAlignment="center"
                    android:textColor="@color/dark_brown"
                    android:textSize="30sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <GridView
                android:id="@+id/chore_grid_half_bath"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:background="@drawable/rounded_layout"
                android:horizontalSpacing="1dp"
                android:numColumns="4"
                android:verticalSpacing="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_layout"
                    android:backgroundTint="@color/red_brown"
                    android:gravity="center_vertical" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-35dp"
                    android:layout_weight="1"
                    android:fontFamily="cursive"
                    android:text="@string/full_bath"
                    android:textAlignment="center"
                    android:textColor="@color/dark_brown"
                    android:textSize="30sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <GridView
                android:id="@+id/chore_grid_full_bath"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:background="@drawable/rounded_layout"
                android:horizontalSpacing="1dp"
                android:numColumns="4"
                android:verticalSpacing="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_layout"
                    android:backgroundTint="@color/red_brown"
                    android:gravity="center_vertical" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-35dp"
                    android:layout_weight="1"
                    android:fontFamily="cursive"
                    android:text="@string/bedroom"
                    android:textAlignment="center"
                    android:textColor="@color/dark_brown"
                    android:textSize="30sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <GridView
                android:id="@+id/chore_grid_bedroom"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:background="@drawable/rounded_layout"
                android:horizontalSpacing="1dp"
                android:numColumns="4"
                android:verticalSpacing="1dp" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>

